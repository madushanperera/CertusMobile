<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/scroller_item_height">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/item" />

        <ImageView
            android:id="@+id/scroll_product_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/scroll_product_img_margin_top"
            android:src="@drawable/img_test" />

        <TextView
            android:id="@+id/scroll_product_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scroll_product_img"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/scroll_product_img"
            android:text="Navy Blue Colored Solid Skater Dress"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/scroll_product_product_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/scroll_product_product_name"
            android:layout_below="@+id/scroll_product_product_name"
            android:layout_marginTop="5dp"
            android:text="Dorathy Perkins" />

        <TextView
            android:id="@+id/scroll_product_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/scroll_product_product_brand"
            android:layout_below="@+id/scroll_product_product_brand"
            android:layout_marginTop="20dp"
            android:text="Rs. 2300.00"
            android:textColor="@android:color/holo_red_dark"
            android:textIsSelectable="false"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/scroll_product_product_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/scroll_product_product_price"
            android:layout_below="@+id/scroll_product_product_price"
            android:layout_marginTop="5dp"
            android:text="Rs.2500.00" />

    </RelativeLayout>
</LinearLayout>
